package com.pikachu923.bananacraft.init;

import com.pikachu923.bananacraft.block.AwakenedBlock;
import com.pikachu923.bananacraft.reference.Reference;

import net.minecraft.block.Block;
import net.minecraft.client.Minecraft;
import net.minecraft.client.renderer.block.model.ModelResourceLocation;
import net.minecraft.item.Item;
import net.minecraft.item.ItemBlock;
import net.minecraftforge.fml.common.registry.GameRegistry;

public class Tier2Blocks {
	public static AwakenedBlock AwakenedBlock = new AwakenedBlock("AwakenedBlock");
	
	public static void Init() {
		register(AwakenedBlock);
	}
	
	private static void register(Block block) {
		GameRegistry.register(block);
		ItemBlock item = new ItemBlock(block);
		item.setCreativeTab(Reference.CreativeTab);
		String regName = block.getRegistryName().toString().substring(12);
		item.setRegistryName(regName);
		System.out.println(block.getRegistryName());
		System.out.println(item.getRegistryName());
		GameRegistry.register(item);
		System.out.println(item.getRegistryName().toString());
		registerRender(item);
	}
	
	private static void registerRender(Item item) {
    	Minecraft.getMinecraft().getRenderItem().getItemModelMesher().register(item, 0, new ModelResourceLocation(item.getUnlocalizedName().substring(5), "inventory"));
    }
}
