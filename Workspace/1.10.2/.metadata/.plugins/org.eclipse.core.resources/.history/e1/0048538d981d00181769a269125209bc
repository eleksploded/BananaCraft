package com.pikachu923.BananaCraft.block;

import java.util.Random;

import com.pikachu923.BananaCraft.reference.Reference;

import net.minecraft.block.SoundType;
import net.minecraft.block.material.Material;
import net.minecraft.block.state.IBlockState;
import net.minecraft.init.Blocks;
import net.minecraft.item.Item;

public class BananaGrass extends BlockWrapper{
    String unlocalName;
    String Texture;X
    public BananaGrass(String unlocalName){
        super(Material.GRASS);
        this.setRegistryName(unlocalName);
        Texture = Reference.RESOURCE_PREFIX + unlocalName;
        setHardness(0.6F);
        setResistance(0.1F);
        setSoundType(SoundType.PLANT);
    }
   
	protected boolean canSilkHarvest()
	{
		return true;
	}
	
	public Item getItemDropped(IBlockState state, Random rand, int fortune) {
	    return Blocks.DIRT.getItemDropped(state, rand, fortune);
	}
	
	
}
