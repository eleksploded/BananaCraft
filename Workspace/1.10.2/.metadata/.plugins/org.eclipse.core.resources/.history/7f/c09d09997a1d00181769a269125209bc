package com.pikachu923.BananaCraft.items;

import com.pikachu923.BananaCraft.reference.Reference;

import net.minecraft.init.MobEffects;
import net.minecraft.item.ItemFood;
import net.minecraft.potion.Potion;
import net.minecraft.potion.PotionEffect;

public class GoldenBanana extends ItemFood {
	String Texture;
    public GoldenBanana(String unlocalName, int healAmount, Potion potionId, int potionAmplifier, int potionDuration, float potionEffectProbability){
        super(healAmount, false);
        setPotionEffect(new PotionEffect(potionId, potionDuration, potionAmplifier), 1F);
        this.setUnlocalizedName(Reference.RESOURCE_PREFIX + unlocalName);
        Texture = Reference.RESOURCE_PREFIX + unlocalName;
        setAlwaysEdible();
        setCreativeTab(Reference.CreativeTab);
    }

    
}
