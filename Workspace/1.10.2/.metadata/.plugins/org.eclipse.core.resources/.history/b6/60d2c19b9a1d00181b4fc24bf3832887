package com.pikachu923.BananaCraft.block;

import com.pikachu923.BananaCraft.reference.Reference;

import net.minecraft.block.BlockSlab;
import net.minecraft.block.material.Material;
import net.minecraft.block.properties.IProperty;
import net.minecraft.item.ItemStack;

public class BananaSlab extends BlockSlab {
	String unlocalName;
	boolean isDouble;
	public BananaSlab(Material material, String unlocalName1 ,boolean double1)
    {
        super(material);
        unlocalName = unlocalName1;
        
        this.setLightOpacity(255);
        this.setRegistryName(Reference.RESOURCE_PREFIX + unlocalName);
        this.setCreativeTab(Reference.CreativeTab);
        this.useNeighborBrightness = true;
        isDouble = double1;
    }

	@Override
	public String getUnlocalizedName(int meta) {
		// TODO Auto-generated method stub
		return unlocalName;
	}

	@Override
	public boolean isDouble() {
		// TODO Auto-generated method stub
		return isDouble;
	}

	@Override
	public IProperty<?> getVariantProperty() {
		// TODO Auto-generated method stub
		return null;
	}

	@Override
	public Comparable<?> getTypeForItem(ItemStack stack) {
		// TODO Auto-generated method stub
		return null;
	}
	
}
